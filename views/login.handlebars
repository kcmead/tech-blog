<!-- Login Card -->
<div class="card">
  <!-- Card Header with Login Title -->
  <h2 class="card-header">LOGIN</h2>

  <!-- Login Form -->
  <form class="card-body login-form">

    <!-- Username Input Field -->
    <div class="form-group">
      <label class="form-label">Username:</label>
      <input class="form-input" type="text" id="username-input-login" />
    </div>

    <!-- Password Input Field -->
    <div class="form-group">
      <label class="form-label">Password:</label>
      <input class="form-input" type="password" id="password-input-login" />
    </div>

    <!-- Login Button -->
    <div class="form-group">
      <button class="btn btn-primary" type="submit">LOGIN</button>
    </div>

  </form>

  <!-- Line Break for Better Separation -->
  <br>

  <!-- Link to Sign Up Page -->
  <a href="/signup">Sign Up Instead</a>
</div>

<!-- Include Login JavaScript -->
<script src="/js/login.js"></script>