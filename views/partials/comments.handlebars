<!-- Comments Container -->
<div class="comments">
  <!-- Iterate through each comment in the context -->
  {{#each this}}
    <!-- Individual Comment Section -->
    <div>
      <!-- Display Comment Content, User, and Date -->
      <p class="card-body2">
        {{commentContent}} - {{user.username}} {{format_date dateCreated}}
      </p>
    </div>
  {{/each}}
</div>