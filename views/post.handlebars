<!-- Post Card -->
<div class="card">
  <div class="card-header flex-row justify-space-between">
    <!-- Post Title with Link -->
    <h2>
      <a href="/post/{{post.id}}">
        <div class="col-8">{{post.postTitle}}</div>
      </a>
    </h2>
    <!-- Post Metadata -->
    <div class="col-3">posted by {{post.user.username}} on {{format_date post.dateCreated}}</div>
  </div>
  <!-- Post Content -->
  <p class="card-body">
    {{post.postContent}}
  </p>
</div>

<!-- Hidden Input for Post ID -->
<input type="hidden" name="post-id" value="{{post.id}}"/>

<!-- Comment Section (if user is logged in) -->
<div class="card">
  <div class="card-header"></div>
  <!-- New Comment Form -->
  <form class="card-body" id="new-comment-form">
    <!-- Comment Input -->
    <p class="form-label">Comment:</p>
    <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <!-- Render Comments from Partial -->
  {{> comments post.comments}}
</div>


<!-- Include Comment JavaScript -->
<script src="/js/comment.js"></script>