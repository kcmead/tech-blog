<!-- Sign Up Card -->
<div class="card">
  <!-- Card Header with Sign Up Title -->
  <h2 class="card-header">SIGN UP</h2>

  <!-- Sign Up Form -->
  <form class="card-body signup-form">

    <!-- Username Input Field -->
    <div class="form-group">
      <label class="form-label">Username:</label>
      <input class="form-input" type="text" id="username-input-signup" />
    </div>

    <!-- Password Input Field -->
    <div class="form-group">
      <label class="form-label">Password:</label>
      <input class="form-input" type="password" id="password-input-signup" />
    </div>

    <!-- Sign Up Button -->
    <div class="form-group">
      <button class="btn btn-primary" type="submit">SIGN UP</button>
    </div>

  </form>

  <!-- Line Break for Better Separation -->
  <br>

  <!-- Link to Login Page -->
  <a href="/login">Login Instead</a>

</div>

<!-- Include SignUp JavaScript -->
<script src="/js/signup.js"></script>